CC = @CC@ $(DEFS) $(LIBS) $(INCLUDES) $(CFLAGS) @DEFS@
CFLAGS = -Wall -rdynamic @CFLAGS@
LIBS = @LIBS@
INCLUDES = -Isrc/ -Isrc/plugins/
FILES = src/radroach.c

all: clean radroach

radroach: radroach.o

radroach.o: $(FILES)
	$(CC) $(FILES) -c

radroach: $(radroach)
	$(CC) -o $@ *.o

clean:
	rm -f *.o
