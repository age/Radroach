CC = @CC@ $(DEFS) $(LIBS) $(INCLUDES) $(CFLAGS)
CFLAGS = -O1 -g -ggdb -pipe -Wall -Wextra -rdynamic
LIBS = -lconfuse -ldl
INCLUDES = -Isrc/ -Isrc/plugins/
FILES = src/radroach.c

all: clean radroach

radroach: radroach.o

radroach.o: $(FILES)
	$(CC) $(FILES) -c

radroach: $(radroach)
	$(CC) -o $@ *.o

clean:
	rm -f *.o
